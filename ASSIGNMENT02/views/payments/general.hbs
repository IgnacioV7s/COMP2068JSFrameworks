<h1>{{title}}</h1>

<table>
    <thead>
        <th>Player</th>
        <th>Amount Paid</th>
        <th>Status</th>
        <th>Last Payment</th>
    </thead>
    <tbody>
        {{#each payments}}
        <tr>
            <td>{{ this.username }}</td>
            <td>{{ this.amountPaid }}</td>
            {{#if ../userIsAdmin}}
            <td>
                <form action="/payments/update-status/{{this._id}}" method="POST">
                    <select name="status" onchange="this.form.submit()">
                        <option value="Pending" {{#if (eq this.status 'Pending' ) }}selected{{/if}}>ğŸ•’ Pending</option>
                        <option value="Confirmed" {{#if (eq this.status 'Confirmed' ) }}selected{{/if}}>âœ… Confirmed
                        </option>
                        <option value="Rejected" {{#if (eq this.status 'Rejected' ) }}selected{{/if}}>âŒ Rejected
                        </option>
                    </select>
                </form>
            </td>
            {{else}}
            <td>
                {{#if (eq this.status 'Pending')}}
                ğŸ•’ Pending
                {{else if (eq this.status 'Confirmed')}}
                âœ… Confirmed
                {{else if (eq this.status 'Rejected')}}
                âŒ Rejected
                {{else}}
                {{this.status}}
                {{/if}}
            </td> {{/if}}
            <td>{{ formatDate this.paymentDate }}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a id="addPayment" href="/payments/addpayment">Register a new payment</a>